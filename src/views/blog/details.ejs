<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            
            <div class="col-lg-9">
                <!-- Post content-->
                <article>
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1">
                            <%= blog.title %>
                        </h1>
                        <!-- Post meta content-->
                        <div class="text-muted fst-italic mb-2">
                            <%= new Date(blog.createdAt).toLocaleDateString('vi-VN') %>
                        </div>

                        <a class="badge bg-secondary text-decoration-none link-light" href="#!">
                            <%= blog.category.name %>
                        </a>
                        
                        <% if (typeof user !== 'undefined' && user) { %>
                        <div class="mt-2">
                            <a href="/blogs/<%= blog._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                            </form>
                        </div>
                        <% } %>
                    </header>
                    <!-- Preview image figure-->
                    <figure class="mb-4"><img class="img-fluid rounded" src="<%= blog.image %>" alt="<%  blog.image %>"
                            style="height: 400px; width:900px;  object-fit: cover; " /></figure>
                    <!-- Post content-->
                    <section class="mb-5">
                        <div class="fs-5 mb-4">
                            <%- blog.content %>
                        </div>

                    </section>
                </article>
                
                <!-- Link to go back to all blogs -->
                <div class="mb-4">
                    <a href="/blogs" class="btn btn-outline-primary">&larr; Back to All Blogs</a>
                </div>
            </div>
            <div class="col-lg-3">
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="card mb-4">
                    <div class="card-header">Admin Actions</div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/blogs/admin/personalblog" class="btn btn-primary">Dashboard</a>
                            <a href="/blogs/admin/createblog" class="btn btn-success">Create New Blog</a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</section>