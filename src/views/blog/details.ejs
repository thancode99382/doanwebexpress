<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            
            <div class="col-lg-9">
                <!-- Post content-->
                <article>
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1">
                            <%= blog.title %>
                        </h1>
                        <!-- Post meta content-->
                        <div class="text-muted fst-italic mb-2">
                            <%= new Date(blog.createdAt).toLocaleDateString('vi-VN') %>
                        </div>

                        <a class="badge bg-secondary text-decoration-none link-light" href="#!">
                            <%= blog.category.name %>
                        </a>
                        
                        
                    </header>
                    <!-- Preview image figure-->
                    <figure class="mb-4"><img class="img-fluid rounded" src="<%= blog.image %>" alt="<%  blog.image %>"
                            style="height: 400px; width:900px;  object-fit: cover; " /></figure>
                    <!-- Post content-->
                    <section class="mb-5">
                        <div class="fs-5 mb-4">
                            <%- blog.content %>
                        </div>

                    </section>
                </article>
                
                <!-- Comments Section -->
                <section class="mb-5">
                    <div class="card bg-light">
                        <div class="card-body">
                            <% if (user) { %>
                                <!-- Comment Form -->
                                <form action="/blogs/<%= blog._id %>/comments" method="POST" class="mb-4">
                                    <textarea class="form-control" name="content" rows="3" placeholder="Leave a comment..." required></textarea>
                                    <button type="submit" class="btn btn-dark mt-2">Post Comment</button>
                                </form>
                            <% } else { %>
                                <div class="alert ">
                                    Please <a href="/auth/login">login</a> to leave a comment.
                                </div>
                            <% } %>

                            <!-- Comments List -->
                            <div class="comments-list">
                                <h4 class="mb-4">Comments</h4>
                                <% if (comments && comments.length > 0) { %>
                                    <% comments.forEach(comment => { %>
                                        <div class="d-flex mb-4">
                                            <div class="flex-shrink-0">
                                                <div class="avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <%= comment.author.username.charAt(0).toUpperCase() %>
                                                </div>
                                            </div>
                                            <div class="ms-3">
                                                <div class="fw-bold"><%= comment.author.username %></div>
                                                <div class="small text-muted mb-1">
                                                    <%= new Date(comment.createdAt).toLocaleDateString('vi-VN') %>
                                                </div>
                                                <%= comment.content %>
                                            </div>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted">No comments yet. Be the first to comment!</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Link to go back to all blogs -->
                <div class="mb-4">
                    <a href="/blogs" class="btn btn-outline-dark">&larr; Back to All Blogs</a>
                </div>
            </div>
            
        </div>
    </div>
</section>